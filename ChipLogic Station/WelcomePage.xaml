<Page x:Class="ChipLogic.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="WelcomePage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to ChipLogic Solutions" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Your RFID Management Solution" FontSize="18" Margin="0,0,0,20"/>
        </StackPanel>

        <!-- Version number at the bottom -->
        <TextBlock x:Name="VersionTextBlock" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" 
                   Margin="0,0,0,10"
                   FontSize="12" 
                   Foreground="Gray"/>
    </Grid>
</Page>
